generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id       BigInt    @id
  name     String    @unique
  status   Status
  adGroups AdGroup[]

  @@map("Campaign")
}

model AdGroup {
  id         BigInt    @id
  name       String
  campaignId BigInt
  status     Status
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
  keywords   Keyword[]

  @@map("AdGroup")
}

model Keyword {
  criterionId BigInt
  keyword     String
  date        DateTime @db.Date
  qs          Int?
  adGroupId   BigInt
  id          Int      @id @default(autoincrement())
  adGroup     AdGroup  @relation(fields: [adGroupId], references: [id])

  @@unique([criterionId, date, adGroupId])
  @@map("Keyword")
}

enum Status {
  ENABLED
  PAUSED
  REMOVED
}
