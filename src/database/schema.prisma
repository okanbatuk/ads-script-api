generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id        BigInt      @id
  name      String
  status    AccountStatus
  campaigns Campaign[]

  @@map("Account")
}

model Campaign {
  id        BigInt    @id
  name      String
  accountId BigInt
  status    Status
  account   Account @relation(fields: [accountId], references: [id])
  adGroups  AdGroup[]

  @@map("Campaign")
}

model AdGroup {
  id         BigInt    @id
  name       String
  campaignId BigInt
  status     Status
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
  keywords   Keyword[]

  @@map("AdGroup")
}

model Keyword {
  id          Int      @id @default(autoincrement())
  criterionId BigInt
  keyword     String
  date        DateTime @db.Date
  qs          Int?
  adGroupId   BigInt
  adGroup     AdGroup  @relation(fields: [adGroupId], references: [id])

  @@unique([criterionId, date, adGroupId])
  @@map("Keyword")
}

enum AccountStatus {
  ENABLED
  CANCELLED
  SUSPENDED
  UNKNOWN
}

enum Status {
  ENABLED
  PAUSED
  REMOVED
  UNKNOWN
}
