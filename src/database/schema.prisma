generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ENABLED
  PAUSED
  REMOVED
}

model Campaign {
  id     BigInt @id
  name   String @unique
  status Status
  adGroups AdGroup[]
}

model AdGroup {
  id         BigInt @id
  name       String
  campaignId BigInt
  status     Status
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  keywords   Keyword[]
}

model Keyword {
  id          Int     @id @default(autoincrement())
  criterionId BigInt
  keyword     String
  date        DateTime @db.Date
  qs          Int?
  adGroupId   BigInt
  adGroup     AdGroup  @relation(fields: [adGroupId], references: [id])

  @@unique([keyword, date, adGroupId])
}
