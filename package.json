{
  "name": "ads-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec node --import=esbuild-register src/server.ts",
    "build": "node builder.js",
    "start": "node dist/server.js",
    "db:generate": "prisma generate --schema=src/database/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/database/schema.prisma",
    "db:push": "prisma db push --schema=src/database/schema.prisma",
    "vercel-build": "bun run build && bun run db:generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^5.0.3",
    "esbuild": "^0.25.9",
    "esbuild-register": "^3.6.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "dotenv-safe": "^9.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "inversify": "^7.9.1",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "prisma": "^6.15.0",
    "reflect-metadata": "^0.2.2"
  }
}
